<?xml version="1.0" encoding="utf-8"?>

<launch>
    <!-- Load world -->
    <arg name="paused" default="false"/>
    <arg name="use_sim_time" default="true"/>
    <arg name="gui" default="true"/>
    <arg name="headless" default="false"/>
    <arg name="debug" default="false"/>

    <!-- We resume the logic in empty_world.launch, changing the name of the
         world to be launched -->
    <include file="$(find gazebo_ros)/launch/empty_world.launch">
        <!--<arg name="world_name" value="$(find baxter_gazebo)/worlds/baxter.world"/>-->
        <arg name="debug" value="$(arg debug)" />
        <arg name="gui" value="$(arg gui)" />
        <arg name="paused" value="$(arg paused)"/>
        <arg name="use_sim_time" value="$(arg use_sim_time)"/>
        <arg name="headless" value="$(arg headless)"/>
    </include>

    <!-- Load baxter model -->
    <!--<include file="$(find baxter_data_acquisition)/launch/baxter.launch">-->
        <!--<arg name="io_gui" value="false"/>-->
    <!--</include>-->

    <!-- Load external Kinect sensor -->
    <group>
        <!--<arg name="tf_prefix" value="kinect_tf"/>-->
        <arg name="tf_prefix" value=""/>

        <!--<param name="tf_prefix" value="$(arg tf_prefix)"/>-->
        <include file="$(find baxter_data_acquisition)/launch/kinect.launch">
            <arg name="x" value="2.5"/>
            <arg name="tf_prefix" value="$(arg tf_prefix)"/>
        </include>
    </group>
</launch>