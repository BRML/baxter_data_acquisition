<?xml version="1.0" encoding="utf-8"?>

<launch>
    <arg name="joint" default="true"/>
    <arg name="camera" default="true"/>
    <arg name="depth" default="true"/>
    <arg name="flash" default="true"/>

    <!-- launch JointRecorder server node -->
    <node if="$(arg joint)"
          pkg="baxter_data_acquisition" type="joint_server.py"
          name="joint_recorder_server"
          respawn="false" output="screen" cwd="node"/>

    <!-- launch CameraRecorder server node -->
    <node if="$(arg camera)"
          pkg="baxter_data_acquisition" type="camera_server.py"
          name="camera_recorder_server"
          respawn="false" output="screen" cwd="node"/>

    <group if="$(arg depth)">
        <!-- launch Kinect Recorder server node -->
        <node pkg="baxter_data_acquisition" type="kinect_server.py"
              name="kinect_recorder_server"
              respawn="false" output="screen" cwd="node"/>

        <!-- launch Senz3d Recorder server node -->
        <node pkg="baxter_data_acquisition" type="senz_server.py"
              name="senz3d_recorder_server"
              respawn="false" output="screen" cwd="node"/>
    </group>

    <!-- launch FlashRecorder server node -->
    <node if="$(arg flash)"
          pkg="baxter_data_acquisition" type="flash_server.py"
          name="flash_recorder_server"
          respawn="false" output="screen" cwd="node"/>
</launch>
